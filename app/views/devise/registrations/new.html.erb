<div class="signup-body">
  <div class="body2">
    <div class="container">
        <div class="col-6" style="text-align: center;">
        <h1>会員登録</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
          <div class="col-6 mb-3">
          <div class="field">
            <%= f.label :name, "ユーザー名" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          </div>

          <div class="col-4 mb-3">
          <div class="field">
           <%= f.label :gender, "性別" %><br />
          <label><%= f.radio_button :gender, 1, checked: "checked" %>  女性</label>
              <label><%= f.radio_button :gender, 2 %>男性</label>
            </div>
            </div>

            <div class="col-2 mb-3">
          <div class="field">
            <%= f.label :age, "年齢" %><br />
            <%= f.number_field :age, autofocus: true, class: "form-control" %>
          </div>
          </div>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="actions"><br>
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div><br>
        <% end %>
        <%= render "devise/shared/links" %>
     </div>
         <div class="col-sm">
       </div>
    </div>
  </div>
</div>
