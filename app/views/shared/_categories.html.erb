<div class="sideber">
  <h3>カテゴリー</h3>
  <ul class="list-group list-group-flush" style="max-width: 200px;">
    <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to "全てのアイテム", items_path %>
    <span class="badge badge-primary badge-pill">
    <%= @items.count %></span>
    </li>
  </ul>
  <% Category.all.each do |category| %>
  <ul class="list-group list-group-flush" style="max-width: 200px;">
    <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to category.category_name, items_path(category_id: category.id, user_id: @user) %>
    <span class="badge badge-primary badge-pill">
    <%= Item.where(category_id: category.id, user_id: @user).count %></span>
    </li>
    <% end %>
  </ul>
</div>
