<div class="container">
  <div class="item-show">
          <h4>アイテム詳細</h4>
          <div class="row">
      <div class="col-4">
        <div class="image-field">
          <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
         </div>
       </div>
         <div class="col-8">
          <div class="item-field">
            <table class="attr">
              <tr>
                <th>カテゴリー<th>
                <td><%= @item.category.category_name %></td>
              </tr>
              <tr>
                <th>ブランド</th>
                <td><%= @item.brand %></td>
              </tr>
              <tr>
                <th>サイズ</th>
                <td><%= @item.size %></td>
              </tr>
              <tr>
                <th>購入金額</th>
                <td><%= @item.price %></td>
              </tr>
              <tr>
                <th>購入時期</th>
                <td><%= @item.purchase_day %></td>
              </tr>
              <tr>
                <th>メモ</th>
                <td><%= @item.memo %></td>
              </tr>
         </table><br>
         <%= link_to "アイテム一覧へ戻る", items_path, class: "btn btn-outline-dark" %>
            <%= link_to "アイテム編集", edit_item_path(@item.id), class: "btn btn-outline-primary" %>
         </div>
        </div>

      </div>
    </div>
  </div>

