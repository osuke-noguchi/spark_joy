<div class="container">
  <div class="item-show">
          <h4>アイテム詳細ページ</h4>
    <div class="row">
      <div class="col-6">
        <div class="image-field">
          <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
         </div>
       </div>
         <div class="col-6">
          <div class="item-field">
            <div class="field">
              <p>カテゴリー</p><br>
              <%= @item.category.category_name %>
             </div>
           <div class="field">
             <p>ブランド</p>
             <%= @item.brand %>
           </div>
           <div class="field">
             <p>サイズ</p>
             <%= @item.size %>
           </div>
           <div class="field">
             <p>購入金額</p>
             <%= @item.price %>
           </div>
           <div class="field">
             <p>購入時期</p>
             <%= @item.purchase_day %>
           </div>
           <div class="field">
             <p>メモ</p>
             <%= @item.memo %>
           </div>
           <div class="field"><br>
            <%= link_to "アイテム一覧へ戻る", items_path, class: "btn btn-outline-primary" %>
            <%= link_to "アイテム情報編集", edit_item_path(@item.id), class: "btn btn-outline-primary" %>
           </div>
         </div>
        </div>

      </div>
    </div>
  </div>

