<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="user-edit">
          <h1>会員情報の編集</h1>
          <div class="edit-field">
          <%= form_for (@user) do |f| %>
            <div class="field">
            <%= f.label :name, "ユーザー名" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
            <div class="field">
            <%= f.label :age, "年齢" %><br />
            <%= f.number_field :age, autofocus: true, class: "form-control" %>
            </div>
            <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %><br>
            </div>
             <%= f.submit "上記の内容を保存", class: "btn btn-success", style: "width: 150px;" %>
             <%= link_to "キャンセル", user_path(@user), class: "btn btn-danger", style: "width: 150px;" %>
            </div>
          </div>
          <% end %>
        </div>
        <div class="col-md-3">
          <div class="user-edit">
            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#myModal">
            退会処理に進む
             </button>
             <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">※注意</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                    <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                    <p>退会すると登録したアイテムは全て削除されます。ご注意ください</p>
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                     <%= link_to '退会', @user, method: :delete, class: "btn btn-danger" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
   </div>
</div>
