<%= render "admins/shared/navber" %>

<div class="admin-page">
<div class="container-fluid">
  <div class="row">
<%= render "admins/shared/sidebar" %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
<h1>ユーザー一覧ページ</h1><h2>会員登録数：<%= User.count %>名</h2>
<table class="table table-striped table-sm user-table">
      <thead>
        <tr>
          <th>会員番号</th>
          <th>ユーザー名</th>
          <th>年齢</th>
          <th>性別</th>
          <th>登録アイテム数</th>
          <th>登録日</th>
          <th></th>
        </tr>
      </thead>
       <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.age %></td>
            <td><%= user.gender %></td>
            <td><%= user.items.count %></td>
            <td><%= user.created_at %></td>
            <td>
              <%= link_to '詳細', admins_user_path(user),
               class:"btn btn-outline-secondary"%>
               <%= link_to '削除', admins_user_path(user), method: :delete,
           data: { confirm: '本当に削除しますか?' }, class: "btn btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </main>
  </div>
</div>
</div>
