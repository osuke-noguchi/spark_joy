<div class="container">
  <div class="item-index">
　　　<h1 class="index-text">カテゴリーのアイテム一覧</h1>
     <div class="row">
       <div class="col-md-5">
         <div class="sideber">
           <h3>カテゴリー</h3>
           <% @categories.each do |category| %>
           <ul class="list-group list-group-flush" style="max-width: 200px;">
            <li class="list-group-item d-flex justify-content-between align-items-center">
            <%#= link_to category.category_name, item_path(item.id) %>
            <%= link_to item_path(category_id: category.id) %>
            <span class="badge badge-primary badge-pill"><%= category.items.count %></span>
             </li>
            </ul>
             <% end %>
          </div>
       </div>
         <div class="col-md-7">
          <div class="item-image">
            <% @items.each do |item| %>
             <p><%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %><br>
              <% end %>
               <%= item.brand %></p>
               <% end %>
          </div>
         </div>
      </div>
  </div>
</div>
